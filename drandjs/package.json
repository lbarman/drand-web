{
    "name": "drand-web",
    "version": "1.0.0",
    "description": "A web interface for drand, the distributed randomness beacon",
    "main": "index.js",
    "repository": "git@github.com:lbarman/drand-web.git",
    "author": "Ludovic Barman <lbarman@protonmail.ch>",
    "license": "MIT",
    "private": false,
    "dependencies": {
        "axios": "^0.18.0",
        "node": "^11.3.0",
        "@types/jest": "^23.3.10",
        "@types/node": "^10.12.12",
        "dts-gen": "^0.5.7",
        "jest": "^23.6.0",
        "ts-jest": "^23.10.5",
        "ts-loader": "^5.3.1",
        "tslint": "^5.11.0",
        "typescript": "^3.2.1",
        "webpack": "^4.27.0",
        "webpack-cli": "^3.1.2"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/",
            "/drand-go-to-js/",
            "/dist/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        },
        "clearMocks": true,
        "collectCoverage": true
    }
}
